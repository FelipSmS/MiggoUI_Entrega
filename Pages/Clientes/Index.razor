@page "/clientes"
@using miggo.adminitrativo.Pages.Clientes.Components

<PageTitle>Clientes</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">Gerenciamento de Clientes</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCriarCliente">
            Novo Cliente
        </button>
    </div>
    <div class="row">
        <!-- Barra Lateral de Filtros -->
        <div class="col-lg-2 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Filtros</h6>
                </div>
                <div class="card-body">
                    <!-- Filtro por ID -->
                    <div class="form-group">
                        <label for="filtroId">ID da Solicitação</label>
                        <input type="text" class="form-control" id="filtroId" placeholder="Digite o ID">
                    </div>

                    <!-- Filtro por Cliente -->
                    <div class="form-group">
                        <label for="filtroCliente">Cliente</label>
                        <input type="text" class="form-control" id="filtroCliente" placeholder="Nome do Cliente">
                    </div>

                    <!-- Filtro por Data de Envio -->
                    <div class="form-group">
                        <label for="filtroDataEnvio">Data de Envio</label>
                        <input type="date" class="form-control" id="filtroDataEnvio">
                    </div>

                    <!-- Filtro por Status -->
                    <div class="form-group">
                        <label for="filtroStatus">Status</label>
                        <select class="form-control" id="filtroStatus">
                            <option value="">Todos</option>
                            <option value="Concluído">Concluído</option>
                            <option value="Em Progresso">Em Progresso</option>
                            <option value="Atrasado">Atrasado</option>
                            <option value="Novo">Novo</option>
                        </select>
                    </div>

                    <!-- Filtro por Prazo para Entrega -->
                    <div class="form-group">
                        <label for="filtroPrazoEntrega">Prazo para Entrega</label>
                        <input type="date" class="form-control" id="filtroPrazoEntrega">
                    </div>

                    <!-- Botão para Filtrar -->
                    <button class="btn btn-primary btn-block mt-3" @onclick="FiltrarSolicitacoes">Filtrar</button>
                </div>
            </div>
        </div>

        <!-- Tabela de Clientes -->
        <div class="col-lg-10">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Clientes</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>CPF/CNPJ</th>
                                    <th>Tipo</th>
                                    <th>Qnt. Serviços</th>
                                    <th>Data de Criação</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Felipe Silva</td>
                                    <td>103.568.986-22</td>
                                    <td>Física</td>
                                    <td>10</td>
                                    <td>2024-10-29</td>
                                    <td><button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCriarCliente">Ver</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<ModalCriarCliente />

