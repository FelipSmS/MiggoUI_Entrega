@page "/solicitacoes"
@using miggo.adminitrativo.Pages.Solicitacoes.Components

<PageTitle>Lista de Solicitações</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800 text-center text-md-left">Minhas Solicitações</h1>
        <button type="button" class="btn btn-primary mt-3 mt-md-0" data-bs-toggle="modal" data-bs-target="#modalCriarSolicitacao">
            Criar Solicitação
        </button>
    </div>
    <div class="row">
        <!-- Barra Lateral de Filtros -->
        <div class="col-12 col-md-4 col-lg-3 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Filtros</h6>
                </div>
                <div class="card-body">
                    <!-- Filtro por ID -->
                    <div class="form-group">
                        <label for="filtroId">ID da Solicitação</label>
                        <input type="text" class="form-control" id="filtroId" placeholder="Digite o ID">
                    </div>

                    <!-- Filtro por Cliente -->
                    <div class="form-group">
                        <label for="filtroCliente">Cliente</label>
                        <input type="text" class="form-control" id="filtroCliente" placeholder="Nome do Cliente">
                    </div>

                    <!-- Filtro por Data de Envio -->
                    <div class="form-group">
                        <label for="filtroDataEnvio">Data de Envio</label>
                        <input type="date" class="form-control" id="filtroDataEnvio">
                    </div>

                    <!-- Filtro por Status -->
                    <div class="form-group">
                        <label for="filtroStatus">Status</label>
                        <select class="form-control" id="filtroStatus">
                            <option value="">Todos</option>
                            <option value="Concluído">Concluído</option>
                            <option value="Em Progresso">Em Progresso</option>
                            <option value="Atrasado">Atrasado</option>
                            <option value="Novo">Novo</option>
                        </select>
                    </div>

                    <!-- Filtro por Prazo para Entrega -->
                    <div class="form-group">
                        <label for="filtroPrazoEntrega">Prazo para Entrega</label>
                        <input type="date" class="form-control" id="filtroPrazoEntrega">
                    </div>

                    <!-- Botão para Filtrar -->
                    <button class="btn btn-primary btn-block mt-3" @onclick="FiltrarSolicitacoes">Filtrar</button>
                </div>
            </div>
        </div>

        <!-- Tabela de Solicitações -->
        <div class="col-12 col-md-8 col-lg-9">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Solicitações</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Cliente</th>
                                    <th>Título</th>
                                    <th>Data de Envio</th>
                                    <th>Status</th>
                                    <th>Prazo para Entrega</th>
                                    <th>Detalhar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Exemplo de Linha de Dados -->
                                <tr>
                                    <td>1</td>
                                    <td>João Silva</td>
                                    <td>Revisão de Contrato</td>
                                    <td>2024-10-01</td>
                                    <td>
                                        <span class="badge badge-success">Concluído</span>
                                    </td>
                                    <td>2024-10-15</td>
                                    <td><button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCriarSolicitacao">Ver</button></td>
                                </tr>
                                <!-- Adicione mais linhas conforme necessário -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<ModalCriarSolicitacao />

